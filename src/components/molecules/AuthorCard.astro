---

import type { CollectionTilType } from "@/content.config";

// biome-ignore lint/correctness/noUnusedVariables: used in template
type Props = {
	postData: CollectionTilType;
};

const { postData } = Astro.props;

// biome-ignore lint/correctness/noUnusedVariables: used in template
const formatedDate = new Date(postData.pubDate).toLocaleDateString("en-US", {
	year: "numeric",
	month: "long",
	day: "numeric",
});
---
<div class="text-xs">
    <div class="uppercase font-semibold ">{postData.author}</div>
    <div>{formatedDate}</div>
</div>
