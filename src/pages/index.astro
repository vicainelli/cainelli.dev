---
import { Image } from "astro:assets";
import ContentWrapper from "@/components/ContentWrapper.astro";
import Layout from "@/layouts/Layout.astro";
import { cn } from "@/lib/utils";

// biome-ignore lint/correctness/noUnusedVariables: used in template
const WORK_EXPERIENCE = [
	{
		company: "IKEA",
		description:
			"Creating and develping the best and semealess experience on the IKEA Family Rewards program for customers and co-workers ",
		current: true,
		url: "/work/ikea",
	},
	{
		company: "JustEat Takeaway",
		description:
			"Shipped a Vue design system used by 10+ squads: fast UI, sleek UX, tested, and smoothly released.",
		current: false,
		url: "/work/justeat-takeaway",
	},
	{
		company: "VIVO / Telef√≥nica",
		description:
			"Built a Vue self-service UI: reusable, tested, and stable, cutting support calls and boosting UX.",
		current: false,
		url: "/work/vivo-telefonica",
	},
];
---

<Layout title="Vinicius Cainelli - Staff Product Engineer">
  <ContentWrapper>
    <main class="my-20">
      <section>
            <div class="">
                <div class="flex items-center gap-4 mb-4">
                <div class="rounded-full border-3 w-16 h-16 mb-2 overflow-hidden hover">
                    <a title="" href="/me">
                        <Image src="https://avatars.githubusercontent.com/vicainelli" width="64" height="64" class="rounded-full" alt="Vinicius Cainelli avatar">
                    </a>
                </div>
                    <div><h1 class="">Vinicius Cainelli</h1></div>
                </div>

        <p class="leading-relaxed">
            I am a software engineer specializing in UI, dedicated to creating impactful and elegant applications that transform lives. <br>
          I am based in the Netherlands and currently writing code, to help you furnish your home, at <a class="" href="./work/ikea">IKEA</a>.</p>
          </div>
      </section>

      <section  class="my-8">
          <div>
              <div class="flex justify-between border-b  py-2 mb-4 items-center">
                  <div><h2 class="text-2xl">Work</h2></div>
                  <div>
                      <a class="" href="/work">view all</a>
                  </div>
              </div>
          <div class="my-2 grid grid-cols-1 sm:grid-cols-2 gap-6">
              {WORK_EXPERIENCE.map((work) => (
              <a href={work.url} class={cn(
                // Position
                // Layout
                "p-4 rounded-md",

                // Styling
                "border  hover:bg-",
                // Dark mode
                // " dark:border-stone-500 dark:hover:bg-stone-700",

                // Other
                "transition-all duration-400 ease-in-out",
                "group",
                `${work.current ? 'sm:col-span-2' : ''}`,
              )}>
                  <h3 class="font-semibold mb-1 transition-colors ease-out">{work.company}</h3>
                  <p class=" text-sm">{work.description}</p>
              </a>
              ))}
          </div>
          </div>
      </section>

      <section>
          <!-- list recent posts -->
      </section>

    </main>
  </ContentWrapper>
</Layout>
