---
import ContentWrapper from "@/components/ContentWrapper.astro";
import Layout from "@/layouts/Layout.astro";

const WORK_EXPERIENCE = [
  {
    company: "IKEA",
    description: "Creating and develping the best and semealess experience on the IKEA Family Rewards program for customers and co-workers ",
    current: true,
  },
  {
    company: "JustEat Takeaway",
    description: "Shipped a Vue design system used by 10+ squads: fast UI, sleek UX, tested, and smoothly released.",
    current: false,
  },
  {
    company: "VIVO / Telef√≥nica",
    description: "Built a Vue self-service UI: reusable, tested, and stable, cutting support calls and boosting UX.",
    current: false,
  },
];

---

<Layout title="Vinicius Cainelli - Product Engineer">
  <ContentWrapper>
    <main class="my-20">
      <section>

            <div class="">
        <h1 class="">Vinicius Cainelli</h1>
        <p class=" text-gray-600 dark:text-stone-300 text-sm text-balance leading-relaxed">
            I'm a software engineer focused on UI, creating impactful and elegant applications that transform lives. <br>
          I am based in the Netherlands and currently writing code, to help you furnish your home, at <a class="border-b-2" href="https://ikea.com">IKEA</a>.</p>
          </div>
      </section>

      <section  class="my-8">
          <div class="flex justify-between border-b border-b-stone-300 py-2 mb-4 items-center">
              <div><h2>Work</h2></div>
              <div>
                  <a class="" href="/work">view all</a>
              </div>
          </div>
      <div class="my-2 grid grid-cols-1 sm:grid-cols-2 gap-4">
          {WORK_EXPERIENCE.map((work) => (
          <div class={`${work.current ? 'sm:col-span-2' : ''} p-3 border border-gray-200 rounded-md`}>
              <h3 class="text-sm font-semibold mb-1">{work.company}</h3>
              <p class="text-sm">{work.description}</p>
          </div>
          ))}
      </div>
      </section>

    </main>
  </ContentWrapper>
</Layout>
